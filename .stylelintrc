{
  "extends": "stylelint-config-standard",
  "rules": {
    "declaration-empty-line-before": "never",
    "rule-nested-empty-line-before": "never",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global", "local"
        ]
      }
    ]
  }
}